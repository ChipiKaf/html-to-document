{
  "name": "html-to-document",
  "version": "0.1.0",
  "description": "A modular, open source library for converting HTML content into professional document formats. Initially focused on HTML-to-DOCX conversion, with planned support for PDF and XLSX. Built with TypeScript, it features a core HTML parsing engine and separate format-specific modules, offering a unified API for seamless integration.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "test:silent": "jest --silent",
    "prepare": "npm run build",
    "lint": "eslint 'src/**/*.{ts,tsx}' --ignore-pattern '**/*.d.ts'",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'"
  },
  "author": {
    "name": "Chipili Kafwilo",
    "email": "ckafwilo@gmail.com",
    "url": "https://chipilidev.com"
  },
  "bugs": {
  "url": "https://github.com/ChipiKaf/html-to-document/issues"
},
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChipiKaf/html-to-document.git"
  },
  "bugs": {
    "url": "https://github.com/ChipiKaf/html-to-document/issues"
  },
  "homepage": "https://github.com/ChipiKaf/html-to-document#readme",
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "html",
    "docx",
    "converter",
    "typescript",
    "document",
    "html-to-docx",
    "html-to-pdf",
    "bidirectional"
  ],
  "devDependencies": {
    "@types/colornames": "^1.1.4",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "fast-xml-parser": "^5.0.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jszip": "^3.10.1",
    "ts-jest": "^29.2.6"
  },
  "dependencies": {
    "colornames": "^1.1.1",
    "csstype": "^3.1.3",
    "docx": "^9.4.0",
    "i": "^0.3.7",
    "image-size": "^2.0.2",
    "jsdom": "^26.0.0",
    "npm": "^10.9.2"
  }
}
