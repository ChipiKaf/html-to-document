{
  "name": "html-to-document-adapter-pdf",
  "version": "0.3.1",
  "description": "PDF adapter for html-to-document-core â€” converts a DocumentElement tree into .pdf using the html2pdf.js library.",
  "keywords": [
    "html-to-document",
    "pdf",
    "adapter",
    "pdf-converter",
    "pdf-lib"
  ],
  "license": "ISC",
  "homepage": "https://github.com/ChipiKaf/html-to-document#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChipiKaf/html-to-document.git",
    "directory": "packages/adapters/pdf"
  },
  "bugs": {
    "url": "https://github.com/ChipiKaf/html-to-document/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "development": {
        "types": "./src/index.ts",
        "import": "./src/index.ts",
        "require": "./src/index.ts"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.js"
      }
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json",
    "test": "vitest --watch false",
    "test:watch": "vitest --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}' --ignore-pattern '**/*.d.ts'",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'"
  },
  "dependencies": {
    "html-to-document-core": "workspace:*",
    "html-to-document-adapter-docx": "workspace:^",
    "html2pdf.js": "^0.10.2",
    "libreoffice-convert": "^1.6.1",
    "mammoth": "^1.6.0",
    "zetajs": "^1.1.0"
  },
  "engines": {
    "node": ">=14"
  },
  "peerDependencies": {
    "jsdom": "*"
  },
  "devDependencies": {
    "pdf-parse": "^1.1.1",
    "vitest": "^3.2.4"
  }
}
