{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "paths": {
      "html-to-document-core": ["../core/dist"],
      "html-to-document-core/*": ["../core/dist/*"],
      "html-to-document-adapter-docx": ["../adapters/docx/dist"],
      "html-to-document-adapter-docx/*": ["../adapters/docx/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/__tests__/**"]
}
